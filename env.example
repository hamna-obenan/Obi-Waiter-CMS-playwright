# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=obi_waiter_dev
DB_USER=dev_user
DB_PASSWORD=dev_password_here
DB_SSL=false

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT secret key (use strong random string in production)
JWT_SECRET=your_super_secret_jwt_key_min_32_chars

# Session timeout in seconds (1800 = 30 minutes)
SESSION_TIMEOUT=1800

# Maximum login retry attempts before lockout
LOGIN_RETRY_LIMIT=5

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=https://develop.d20aue3nu6xt33.amplifyapp.com,http://localhost:3000

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size for uploads
MAX_FILE_SIZE=5MB

# Allowed image types (comma-separated)
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Upload directories
UPLOAD_PATH=/uploads/
LOGO_UPLOAD_PATH=/uploads/logos/
COVER_UPLOAD_PATH=/uploads/covers/
GALLERY_UPLOAD_PATH=/uploads/gallery/

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP server settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@obi-waiter.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM=Obi-Waiter CMS <noreply@obi-waiter.com>

# ===========================================
# PAYMENT GATEWAY CONFIGURATION
# ===========================================
# Payment gateway API endpoint
PAYMENT_GATEWAY_URL=https://payment.obi-waiter.com

# Payment gateway API credentials
PAYMENT_API_KEY=pk_test_your_payment_api_key_here
PAYMENT_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe payment integration
STRIPE_PUBLISHABLE_KEY=pk_test_51ABCDEFabcdef123456789
STRIPE_SECRET_KEY=sk_test_51ABCDEFabcdef123456789

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================
# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=AIzaSyAaBbCcDdEeFfGgHhIiJjKk

# Google Analytics (for tracking)
GOOGLE_ANALYTICS_ID=G-ABCD1234EF

# Social media app IDs
FACEBOOK_APP_ID=123456789012345
INSTAGRAM_CLIENT_ID=abcdef123456789

# ===========================================
# LOGGING & MONITORING
# ===========================================
# Logging level: debug, info, warn, error
LOG_LEVEL=debug

# Log file directory
LOG_FILE_PATH=./logs/

# Enable console logging (useful for development)
ENABLE_CONSOLE_LOGGING=true

# Enable application metrics
ENABLE_METRICS=true

# Health check interval in milliseconds (30000 = 30 seconds)
HEALTH_CHECK_INTERVAL=30000

# Alert email for system notifications
ALERT_EMAIL=alerts@obi-waiter.com

# ===========================================
# TEST CONFIGURATION
# ===========================================
# Enable test mode (adds test data, debug features)
TEST_MODE=true

# Enable test data creation/seeding
ENABLE_TEST_DATA=true

# Mock payment processing (true = no real charges)
MOCK_PAYMENTS=true

# Mock email sending (true = emails logged, not sent)
MOCK_EMAIL_SENDING=true

# Enable debug pause in tests (for debugging)
ENABLE_DEBUG_PAUSE=false

# Capture screenshot on test failure
SCREENSHOT_ON_FAILURE=true

# Record video during test execution
VIDEO_RECORDING=true

# ===========================================
# PERFORMANCE & CACHING
# ===========================================
# Cache time-to-live in seconds (300 = 5 minutes)
CACHE_TTL=300

# Enable Redis caching
ENABLE_REDIS_CACHE=false

# Redis connection URL
REDIS_URL=redis://localhost:6379

# CDN base URL (for serving static assets)
CDN_URL=https://cdn.obi-waiter.com

# ===========================================
# RATE LIMITING
# ===========================================
# Maximum requests per window
RATE_LIMIT_REQUESTS=100

# Rate limit window in milliseconds (900000 = 15 minutes)
RATE_LIMIT_WINDOW=900000

# API rate limit (requests per hour)
API_RATE_LIMIT=1000

# ===========================================
# SSL & SECURITY
# ===========================================
# Enable SSL/HTTPS
SSL_ENABLED=true

# SSL certificate paths (for custom SSL)
SSL_CERT_PATH=/etc/ssl/certs/obi-waiter.crt
SSL_KEY_PATH=/etc/ssl/private/obi-waiter.key

# Force HTTPS redirect
FORCE_HTTPS=true

# ===========================================
# SECURITY HEADERS
# ===========================================
# Enable security headers
SECURITY_HEADERS=true

# Content Security Policy
CSP_ENABLED=true

# HTTP Strict Transport Security
HSTS_ENABLED=true

# X-Frame-Options header
X_FRAME_OPTIONS=DENY

# X-Content-Type-Options header
X_CONTENT_TYPE_OPTIONS=nosniff

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================
# Enable automatic backups
BACKUP_ENABLED=true

# Backup schedule (cron format: 0 2 * * * = 2 AM daily)
BACKUP_SCHEDULE=0 2 * * *

# Backup retention period in days
BACKUP_RETENTION_DAYS=7

# Maintenance mode (true = site shows maintenance page)
MAINTENANCE_MODE=false

# ===========================================
# PLAYWRIGHT TEST CONFIGURATION
# ===========================================
# Base URL for Playwright tests (usually same as BASE_URL)
PLAYWRIGHT_BASE_URL=https://develop.d20aue3nu6xt33.amplifyapp.com

# Default timeout for test actions in milliseconds
PLAYWRIGHT_TIMEOUT=30000

# Number of test retries on failure
PLAYWRIGHT_RETRIES=2

# Number of parallel workers (undefined = auto-detect)
PLAYWRIGHT_WORKERS=2

# Run tests in headless mode (false = show browser)
PLAYWRIGHT_HEADLESS=false

# Record video for tests
PLAYWRIGHT_VIDEO=true

# Capture screenshots
PLAYWRIGHT_SCREENSHOT=true

# Enable trace recording (for debugging)
PLAYWRIGHT_TRACE=true

# ===========================================
# CDN & STATIC ASSETS
# ===========================================
# Enable CDN for static assets
CDN_ENABLED=false

# CDN cache TTL in seconds (86400 = 24 hours)
CDN_CACHE_TTL=86400

# Assets version (for cache busting)
ASSETS_VERSION=v1.0.0

# Static assets URL
STATIC_ASSETS_URL=https://static.obi-waiter.com

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable specific features
ENABLE_ONLINE_ORDERING=true
ENABLE_TABLE_RESERVATIONS=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_REVIEWS=true
ENABLE_PUSH_NOTIFICATIONS=true

# ===========================================
# MENU MANAGEMENT
# ===========================================
# Maximum items per menu
MAX_ITEMS_PER_MENU=500

# Maximum categories per venue
MAX_CATEGORIES_PER_VENUE=50

# Maximum ingredients per item
MAX_INGREDIENTS_PER_ITEM=50

# Allow duplicate menu names
ALLOW_DUPLICATE_MENU_NAMES=false

# ===========================================
# ORDER MANAGEMENT
# ===========================================
# Order timeout in minutes (120 = 2 hours)
ORDER_TIMEOUT=120

# Auto-accept orders after minutes (0 = disabled)
AUTO_ACCEPT_ORDERS=0

# Enable order notifications
ENABLE_ORDER_NOTIFICATIONS=true

# Minimum order amount
MINIMUM_ORDER_AMOUNT=5.00

# ===========================================
# LOCALIZATION
# ===========================================
# Default language
DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,ur,ar

# Default timezone
DEFAULT_TIMEZONE=UTC

# Date format
DATE_FORMAT=YYYY-MM-DD

# Time format (12 or 24)
TIME_FORMAT=24

# ===========================================
# NOTIFICATIONS
# ===========================================
# Firebase Cloud Messaging (for push notifications)
FCM_SERVER_KEY=your_fcm_server_key_here

# Twilio SMS (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# ANALYTICS & TRACKING
# ===========================================
# Enable analytics
ENABLE_ANALYTICS=true

# Session tracking
ENABLE_SESSION_TRACKING=true

# User behavior tracking
ENABLE_BEHAVIOR_TRACKING=true

# Error tracking (e.g., Sentry)
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Enable hot reload (development only)
ENABLE_HOT_RELOAD=true

# Enable source maps (for debugging)
ENABLE_SOURCE_MAPS=true

# Show detailed error messages
SHOW_DETAILED_ERRORS=true

# ===========================================
# NOTES
# ===========================================
# 
# SECURITY REMINDERS:
# - Never commit .env files with real credentials
# - Use strong, unique passwords for production
# - Rotate secrets regularly
# - Use environment-specific values
# - Enable SSL in staging and production
# 
# DEVELOPMENT TIPS:
# - Set PLAYWRIGHT_HEADLESS=false to see browser during tests
# - Set ENABLE_DEBUG_PAUSE=true to pause tests for debugging
# - Use LOG_LEVEL=debug for detailed logging
# - Set VIDEO_RECORDING=true to record test failures
# 
# PERFORMANCE TIPS:
# - Enable REDIS for better caching in production
# - Use CDN for static assets in production
# - Set appropriate CACHE_TTL values
# - Configure rate limiting to prevent abuse
# 
# ===========================================
