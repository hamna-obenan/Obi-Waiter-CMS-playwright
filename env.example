# Example Environment Configuration
# Obi-Waiter CMS - Environment Template
# Copy this file to env.development, env.staging, or env.production and fill in your actual values

# ===========================================
# APPLICATION URLs
# ===========================================
BASE_URL=https://your-app-domain.com
API_URL=https://api.your-app-domain.com
ADMIN_URL=https://admin.your-app-domain.com
LOGIN_URL=https://your-app-domain.com/login
VENUE_URL=https://your-app-domain.com/venue

# ===========================================
# TEST DATA CONFIGURATION
# ===========================================
# Test user credentials (replace with your actual test accounts)
TEST_USER_EMAIL=your-test-email@example.com
TEST_USER_PASSWORD=your-test-password
TEST_ADMIN_EMAIL=admin@your-domain.com
TEST_ADMIN_PASSWORD=your-admin-password

# Test venue data
TEST_VENUE_NAME=Your Test Venue
TEST_VENUE_EMAIL=venue@your-domain.com
TEST_VENUE_TYPE=Restaurant
TEST_VENUE_CUISINE=International
TEST_VENUE_DESCRIPTION=Your venue description here
TEST_VENUE_ADDRESS=Your venue address
TEST_VENUE_LANGUAGE=English
TEST_VENUE_TIMEZONE=(UTC+00:00) Coordinated Universal Time
TEST_VENUE_CURRENCY=USD
TEST_TIP_PERCENTAGE=10
TEST_DINE_IN_TAX=8
TEST_TAKEAWAY_TAX=6
TEST_INSTAGRAM=https://www.instagram.com/yourvenue
TEST_FACEBOOK=https://www.facebook.com/yourvenue
TEST_CLIENT_URL=your-venue-slug

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=your-db-host.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=true

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET=your_jwt_secret_key_here
SESSION_TIMEOUT=3600
LOGIN_RETRY_LIMIT=5
CORS_ORIGINS=https://your-app-domain.com,https://admin.your-app-domain.com

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=10MB
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=/uploads/
LOGO_UPLOAD_PATH=/uploads/logos/
COVER_UPLOAD_PATH=/uploads/covers/
GALLERY_UPLOAD_PATH=/uploads/gallery/

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@your-domain.com

# ===========================================
# PAYMENT GATEWAY
# ===========================================
PAYMENT_GATEWAY_URL=https://payment.your-domain.com
PAYMENT_API_KEY=your_payment_api_key
PAYMENT_WEBHOOK_SECRET=your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_ANALYTICS_ID=GA-your-analytics-id
FACEBOOK_APP_ID=your_facebook_app_id
INSTAGRAM_CLIENT_ID=your_instagram_client_id

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=/logs/
ENABLE_CONSOLE_LOGGING=true
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30000
ALERT_EMAIL=alerts@your-domain.com

# ===========================================
# TEST CONFIGURATION
# ===========================================
TEST_MODE=true
ENABLE_TEST_DATA=true
MOCK_PAYMENTS=true
MOCK_EMAIL_SENDING=true
ENABLE_DEBUG_PAUSE=false
SCREENSHOT_ON_FAILURE=true
VIDEO_RECORDING=true

# ===========================================
# PERFORMANCE & CACHING
# ===========================================
CACHE_TTL=300
ENABLE_REDIS_CACHE=false
REDIS_URL=redis://localhost:6379
CDN_URL=https://cdn.your-domain.com

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT=1000

# ===========================================
# SSL & SECURITY
# ===========================================
SSL_ENABLED=true
SSL_CERT_PATH=/ssl/cert.pem
SSL_KEY_PATH=/ssl/private.key
FORCE_HTTPS=true

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
MAINTENANCE_MODE=false

# ===========================================
# PLAYWRIGHT TEST CONFIGURATION
# ===========================================
PLAYWRIGHT_BASE_URL=https://your-app-domain.com
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_RETRIES=2
PLAYWRIGHT_WORKERS=2
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_VIDEO=true
PLAYWRIGHT_SCREENSHOT=true
PLAYWRIGHT_TRACE=true

# ===========================================
# SECURITY HEADERS
# ===========================================
SECURITY_HEADERS=true
CSP_ENABLED=true
HSTS_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# ===========================================
# CDN & ASSETS
# ===========================================
CDN_ENABLED=false
CDN_CACHE_TTL=86400
ASSETS_VERSION=v1.0.0
STATIC_ASSETS_URL=https://static.your-domain.com
